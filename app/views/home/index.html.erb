<div class="container">

  <% @subjects.each_with_index { |subject, i| %>
      <div class="span-8 <%= ((i>1 )&&( (i+1) % 3==0 )) ? 'last' : '' %>">
        <div class="subject">
          <div class="name">
            <%= link_to "[ #{subject.name} ]", subject_lessons_url( subject ) %>
          </div>
          <div class="word_count"> <%= subject.word_count %>个单词 </div>
        </div>
      </div>
  <% } %>
</div>
